<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".screens.ExperimentScreens.StartExperimentScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="@string/transmission_settings"
                android:textColor="@color/colorPrimary"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/transmission_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="19dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="@string/environment_settings"
                android:textColor="@color/colorPrimary"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/environment_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="test"
                android:textSize="19dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="LoRa Settings"
                android:textColor="@color/colorPrimary"
                android:textSize="22dp" />


            <TextView
                android:id="@+id/lora_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="test"
                android:textSize="19dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="@string/experiment"
                android:textColor="@color/colorPrimary"
                android:textSize="22dp" />


            <TextView
                android:id="@+id/exp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="6dp"
                android:text="test"
                android:textSize="19dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/location_card"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rcv_msg_card">

                <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryDark"
                    tools:context=".screens.ExploreScreens.SenderExploreScreen">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/latitude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:background="@color/colorPrimaryDark"
                            android:text="@string/latitude"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/longitude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:background="@color/colorPrimaryDark"
                            android:text="@string/longitude"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/altitude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:background="@color/colorPrimaryDark"
                            android:text="@string/altitude"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/distance_to_sender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:background="@color/colorPrimaryDark"
                            android:text="@string/default_dist_string"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/accelerate_indicator_at_sender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:background="@color/colorPrimaryDark"
                            android:text="@string/quality_indicator"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/accelerate_indicator_rec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:background="@color/colorPrimaryDark"
                            android:text="@string/quality_indicator"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/tag_location"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="@color/colorPrimary"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:onClick="logLocation"
                        android:src="@drawable/ic_baseline_location_on_24"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/countdownpickerlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/round_corners"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:text="delay:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22dp" />

                <EditText
                    android:id="@+id/hours_edit"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="h"
                    android:textSize="22dp" />

                <EditText
                    android:id="@+id/minutes_edit"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="m"
                    android:textSize="22dp" />

                <EditText
                    android:id="@+id/seconds_edit"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="s"
                    android:textSize="22dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/delaylayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/round_corners"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:text="delay:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/htext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/timing_default_string"
                    android:textSize="22dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/experiment_monitor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="13dp"
                android:background="@drawable/round_corners_dark"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">

                    <TextView
                        android:id="@+id/exp_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/timing_default_string"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/msg_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/nothing_received_yet"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/rssi_snr_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/default_rssi_display"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="22dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/exp_finished_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="13dp"
                android:background="@drawable/round_corners_dark"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="50dp"
                    android:paddingBottom="60dp">

                    <TextView
                        android:id="@+id/exp_finished_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/experiment_finished"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="27dp" />

                    <Button
                        android:id="@+id/create_csv_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:text="Create and upload files"
                        android:onClick="createCsv"
                        android:background="@drawable/round_corners_dark"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18dp" />

                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/nextExpButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:onClick="startNextExperiment"
                android:background="@drawable/circle_arrow_right"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="gone"/>

            <Button
                android:id="@+id/start_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/round_corners_dark"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:onClick="makeConfirmationDialog"
                android:text="start"
                android:textColor="@color/colorPrimary"
                android:textSize="22dp" />


            <Button
                android:id="@+id/ping_button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/circle_phone"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="pingDevice" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:textSize="22dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>